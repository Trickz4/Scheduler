@model IEnumerable<Scheduler.Data.Event>
@*model je member samog pagea koji representa datu koja mu je proslijedena*@
@{
    ViewBag.Title = "Testiranje";
    ViewBag.InitModule = "homeTest"; // ubacujemo ga u viewbag u layout-u
}
@section Scripts{
    <script src="~/js/home-test.js"></script>
    <script src="~/js/bootstrap-datetimepicker.js"></script>
}

<div data-ng-controller="homeTestController">
    @*ime kontrolera koji je povezan na home-test.js*@
    <h2 id="pocetak">@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>

    <!-- Text forme iznad-->
    <div class="row">

        <form name="newEventForm" class="form-horizontal" data-ng-submit="save()">
            <fieldset>
                <!-- Za ime eventa -->
                <div class="form-group">
                    <label for="name" class="col-sm-1 control-label">Event</label>
                    <div class="input-append date form_datetime">
                        <input size="16" type="text" value="" readonly data-ng-model="newEvent.from">
                        <span class="add-on"><i class="icon-th"></i></span>  <!-- prazno polje za unit || salje podatak u home-test.js ( u post metodu u $scope.newEvent) -->
                    </div>
                    <script type="text/javascript">
                        $(".form_datetime").datetimepicker({
                            format: "dd MM yyyy - hh:ii",
                            autoclose: true,
                            todayBtn: true,
                            pickerPosition: "bottom-left"
                        });
                    </script>
                </div>

                @*------------------napravit 5 polja za mjesec, dan, godina, sat,minute-------------*@


                <!-- Za description eventa -->
                <div class="form-group">
                    <label for="body" class="col-sm-1 control-label">Description</label>
                    <div class="col-sm-4">
                        <textarea name="body" rows="5" cols="30" class="form-control" data-ng-model="newEvent.description"></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-10">
                        <button type="submit" class="btn btn-primary" id="btnUbaci">Add</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>


    <!-- Za description eventa
        <div class="col-md-4">
            <form class="form-horizontal" method="post">
                <textarea class="form-control" rows="3"></textarea>
            </form>
        </div>
    </div>
             -->
    <!-- Tablica ispod -->
    <div class="test_tab_table">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr class="info">
                    <th scope="col" class="col-md-2">#</th>
                    <th scope="col" class="col-md-2">Name</th>
                    <th scope="col" class="col-md-3">From</th>
                    <th scope="col" class="col-md-3">Until</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>

            <tbody>
                <tr data-ng-repeat="i in data">
                    <th scope="row">{{ i.id }}</th>
                    <td>{{ i.name }}</td>
                    <td>{{ i.from|date:"medium"}}</td>
                    <td>{{ i.until|date:"medium"}}</td>
                    <td>{{ i.description }}</td>
                </tr>
            </tbody>
        </table>
    </div>

